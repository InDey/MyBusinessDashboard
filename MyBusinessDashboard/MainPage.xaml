<Page
    x:Class="MyBusinessDashboard.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyBusinessDashboard"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="loginGrid" Background="{StaticResource ApplicationPageBackgroundThemeBrush}" ToolTipService.ToolTip="Username">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <PasswordBox x:Name="PassBox" Margin="581,418,0,0" VerticalAlignment="Top" ToolTipService.ToolTip="Password" HorizontalAlignment="Left" Width="205"/>
        <TextBox x:Name="UserBox" Margin="581,368,0,0" TextWrapping="Wrap" VerticalAlignment="Top" ToolTipService.ToolTip="Username" HorizontalAlignment="Left" Width="205"/>
        <Button x:Name="LoginBtn" Content="Login" HorizontalAlignment="Left" Margin="698,485,0,0" VerticalAlignment="Top" Height="32" BorderBrush="White" BorderThickness="1" Width="88"/>
        <Button x:Name="RegisterBtn" Content="Register" HorizontalAlignment="Left" Margin="581,485,0,0" VerticalAlignment="Top" Height="32" BorderBrush="White" BorderThickness="1" Width="88"/>

    </Grid>
</Page>
